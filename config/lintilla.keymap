        >;
    };

    nav {
        //                       ┏━━━━━━━━━━━━━━━━━━━━━━━━━┓
        display-name = "navigation"            ;
        //                       ┗━━━━━━━━━━━━━━━━━━━━━━━━━┛
        bindings = <
//         ┏━━━━━━━┓                                                                               ┏━━━━━━━┓
           &to CONFIG                                                                              &to CONFIG
// ┏━━━━━━━╋━━━━━━━╋━━━━━━━┳━━━━━━━┳━━━━━━━┳━━━━━━━┓           ┏━━━━━━━━━━┳━━━━━━━━┳━━━━━━━┳━━━━━━━╋━━━━━━━╋━━━━━━━┓
  &kp PSCRN &kp F1  &kp F2   &kp F3  &kp F4 &kp C_VOL_UP       &none      &kp PGUP &kp UP &kp PGUP  &kp DEL &kp BSPC
