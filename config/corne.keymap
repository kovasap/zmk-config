#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {

   macros {
        // Windows sleep key
        win_sleep: win_sleep {
            wait-ms = <500>;
            tap-ms = <5>;
            compatible = "zmk,behavior-macro";
            label = "WIN_SLEEP_KEY";
            #binding-cells = <0>;
            bindings = <&kp LG(X) &kp U &kp S>;
        };
    };
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | TAB  |  Q  |  W  |  F  |  P  |  B  |   |  J  |  L   |  U  |  Y  |  ;  | BKSP |
// | ESC  |  A  |  R  |  S  |  T  |  G  |   |  M  |  N   |  E  |  I  |  O  |  '   |
// | ALT  |  Z  |  X  |  C  |  D  |  V  |   |  K  |  H   |  ,  |  .  |  /  | ENT  |
//                    | GUI | CTL | SPC |   | SHF | LAY1 | LAY2|
                        bindings = <
   &kp TAB   &kp Q &kp W &kp F &kp P &kp B   &kp J &kp L &kp U     &kp Y   &kp SEMI &kp BSPC
   &kp ESC   &kp A &kp R &kp S &kp T &kp G   &kp M &kp N &kp E     &kp I   &kp O    &kp SQT
   &kp LALT  &kp Z &kp X &kp C &kp D &kp V   &kp K &kp H &kp COMMA &kp DOT &kp FSLH &kp RET
              &kp LGUI &kp LCTRL &kp SPACE   &kp LSHFT &mo 1 &mo 2
                        >;
                };

                lower_layer {
// -----------------------------------------------------------------------------------------
// |   `  |  $  |  !  |  {  |  }  |  =  |                     |  +  |  7  |  8  |  9  |  UP | HOME |
// |   ~  |  %  |  @  |  (  |  )  | "|" |                     |  -  |  4  |  5  |  6  | LEFT|RIGHT |
// |   ^  |  &  |  #  |  [  |  ]  |  *  |                     |  0  |  1  |  2  |  3  | DOWN| END  |
//                    |  \  |  _  | DEL |                     |     |     |     |
                        bindings = <
   &kp GRAVE &kp DLLR  &kp EXCL &kp LBRC &kp RBRC  &kp EQUAL   &kp PLUS  &kp N7 &kp N8 &kp N9 &kp UP   &kp HOME
   &kp TILDE &kp PRCNT &kp AT   &kp LPAR &kp RPAR  &kp PIPE    &kp MINUS &kp N4 &kp N5 &kp N6 &kp LEFT &kp RIGHT
   &kp CARET &kp AMPS  &kp HASH &kp LBKT &kp RBKT  &kp ASTRK   &kp N0    &kp N1 &kp N2 &kp N3 &kp DOWN &kp END
                  &kp BSLH    &kp UNDER &kp DEL     &trans    &trans    &trans
                        >;
                };

                upper_layer {
// -------------------------------------------------------------------------
// |      |  F1 |  F2 |  F3 | F4  |     |  |VOL+ |PSCRN|BTCLR|BTCAL|     |SLEEP |
// |      |  F5 |  F6 |  F7 |  F8 |     |  |VOL- | BT1 | BT2 | BT3 | BT4 |LOCK  |
// |      | F9  | F10 | F11 | F12 |     |  |     | BTX1| BTX2| BTX3| BTX4|      |
//                    |     |     |     |  |     |     |     |
                        bindings = <
   &trans &kp F1 &kp F2  &kp F3  &kp F4  &trans     &kp C_VOL_UP  &kp PSCRN      &bt BT_CLR    &bt BT_CLR_ALL  &trans        &win_sleep
   &trans &kp F5 &kp F6  &kp F7  &kp F8  &trans     &kp C_VOL_DN  &bt BT_SEL 0   &bt BT_SEL 1  &bt BT_SEL 2    &bt BT_SEL 3  &kp C_AL_LOCK
   &trans &kp F9 &kp F10 &kp F11 &kp F12 &trans     &trans        &bt BT_DISC 0  &bt BT_DISC 1 &bt BT_DISC 2   &bt BT_DISC 3 &trans
                 &trans    &trans   &trans             &trans    &trans    &trans
                        >;
                };
        };
};
